<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Grid.ColumnSpan="3" HorizontalContentAlignment="Right" Text="" VerticalAlignment="Center" FontSize="72"></TextBox>
        <Grid x:Name="mButtons" Grid.Row="1" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="MC" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="MR" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="M+" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="M-" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="MS" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="M" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        </Grid>
        <Grid x:Name="otherButtons" Grid.Row="2" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="%" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="CE" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="C" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="Delete" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
        </Grid>
        <Grid x:Name="algButtons" Grid.Row="3" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="1/x" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="x/2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="2\x" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="/" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
        </Grid>
        <Grid x:Name="mulButtons" Grid.Row="4" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="7" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="8" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="9" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="X" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
        </Grid>
        <Grid x:Name="minButtons" Grid.Row="5" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="4" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="6" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="-" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
        </Grid>
        <Grid x:Name="addButtons" Grid.Row="6" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="1" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
            <Button Content="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="3" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="+" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
        </Grid>
        <Grid x:Name="finalButtons" Grid.Row="7" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="+/-" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="." Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
            <Button Content="=" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
        </Grid>
    </Grid>
</Window>
