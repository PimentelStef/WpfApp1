<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="3"></Setter>
            <Setter Property="FontSize" Value="22"></Setter>
            <Setter Property="Background" Value="LightGray"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="12"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Grid.ColumnSpan="3" HorizontalContentAlignment="Right" Text="" VerticalAlignment="Center" FontSize="72"></TextBox>
        <Grid x:Name="mButtons" Grid.Row="1" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="MC" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="MR" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="M+" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="M-" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="MS" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="M" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="2" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Content="%" Margin="3"></Button>
            <Button Content="CE" Margin="3" Grid.Column="1"></Button>
            <Button Content="C" Margin="3" Grid.Column="2"></Button>
            <Button Content="Back" Margin="3" Grid.Column="3"></Button>

            <Button Content="1/x" Margin="3" Grid.Row="1"></Button>
            <Button Content="x^2" Margin="3" Grid.Row="1" Grid.Column="1"></Button>
            <Button Content="sqrt" Margin="3" Grid.Row="1" Grid.Column="2"></Button>
            <Button Content="÷" Margin="3" Grid.Row="1" Grid.Column="3"></Button>

            <Button Content="7" Margin="3" Grid.Row="2"></Button>
            <Button Content="8" Margin="3" Grid.Row="2" Grid.Column="1"></Button>
            <Button Content="9" Margin="3" Grid.Row="2" Grid.Column="2"></Button>
            <Button Content="×" Margin="3" Grid.Row="2" Grid.Column="3"></Button>

            <Button Content="4" Margin="3" Grid.Row="3"></Button>
            <Button Content="5" Margin="3" Grid.Row="3" Grid.Column="1"></Button>
            <Button Content="6" Margin="3" Grid.Row="3" Grid.Column="2"></Button>
            <Button Content="-" Margin="3" Grid.Row="3" Grid.Column="3"></Button>

            <Button Content="1" Margin="3" Grid.Row="4"></Button>
            <Button Content="2" Margin="3" Grid.Row="4" Grid.Column="1"></Button>
            <Button Content="3" Margin="3" Grid.Row="4" Grid.Column="2"></Button>
            <Button Content="+" Margin="3" Grid.Row="4" Grid.Column="3"></Button>

            <Button Content="+/-" Margin="3" Grid.Row="5"></Button>
            <Button Content="0" Margin="3" Grid.Row="5" Grid.Column="1"></Button>
            <Button Content="." Margin="3" Grid.Row="5" Grid.Column="2"></Button>
            <Button Content="=" Margin="3" Grid.Row="5" Grid.Column="3"></Button>
        </Grid>
    </Grid>
</Window>
